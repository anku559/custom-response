{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "moduleResolution": "node",
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
